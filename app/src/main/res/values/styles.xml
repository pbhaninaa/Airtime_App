<resources>

    <style name="Widget.Theme.Pos.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <!-- Button Style -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_conners_background</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="CustomButtonStyleItemised" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_conners_background</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layoutDirection">rtl</item>
    </style>


    <style name="CustomButtonStyle2" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_conners_background</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>


    </style>

    <style name="CustomButtonStyle3" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_conners_background</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:height">60dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomButtonStyle4" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded16_conners</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBox" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#012F7A</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_width">match_parent</item> <!-- Match the parent width -->
        <item name="android:layout_height">120dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item> <!-- Space between icon and text -->
        <item name="android:paddingStart">16dp</item> <!-- Padding from the start -->
        <item name="android:paddingEnd">16dp</item> <!-- Padding from the end -->
    </style>


