<resources>

    <style name="Widget.Theme.Pos.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <!-- Button Style -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_conners_background</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomButtonStyleItemised" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_conners_background</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layoutDirection">rtl</item>
    </style>


    <style name="CustomButtonStyle3" parent="Widget.AppCompat.Button">
        <!--        <item name="theme">@style/AppTheme</item>-->
        <item name="android:background">@drawable/rounded_conners_with_gradient</item>
        <item name="backgroundTint">@color/tertiary_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:padding">@dimen/twelve</item>
        <item name="android:layout_marginTop">@dimen/twenty</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="keyboardKeys" parent="Widget.AppCompat.Button">
        <!--        <item name="theme">@style/AppTheme</item>-->
        <!--        <item name="android:background">@drawable/keyboard_keys_shadow</item>-->
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:padding">@dimen/eight</item>
        <item name="android:layout_height">@dimen/fifty</item>
        <item name="android:background">@drawable/keyboard_button_active_state</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="CustomButtonStyle2" parent="Widget.AppCompat.Button">
        <!--        <item name="theme">@style/AppTheme</item>-->
        <item name="android:background">@drawable/rounded_conners_with_gradient</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/twelve</item>
        <item name="android:layout_marginTop">@dimen/twenty</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SpinnerItemStyle2" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="color">@color/primary_color</item>
    </style>

    <style name="CustomButtonStyle4" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded16_conners</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AcceptButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/white_box_with_shadow</item>
        <item name="color">@color/primary_color</item>
        <item name="backgroundTint">@color/medium_sea_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CancelButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/white_box_with_shadow</item>
        <item name="color">@color/primary_color</item>
        <item name="backgroundTint">@color/indian_red</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBox" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_width">match_parent</item> <!-- Match the parent width -->
        <item name="android:layout_height">120dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item> <!-- Space between icon and text -->
        <item name="android:paddingStart">16dp</item> <!-- Padding from the start -->
        <item name="android:paddingEnd">16dp</item> <!-- Padding from the end -->
    </style>


    <style name="PrimaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_conners_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btn_pin" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_conners_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <!--        <item name="android:background">@drawable/calender_dates</item>-->
        <!-- Change selected date color to red -->
        <item name="colorAccent">@color/primary_color</item>

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="background">@color/light_gray</item>
        <item name="colorPrimary">@color/secondary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/tertiary_color</item>
        <!-- Other style attributes -->
    </style>
    <style name="AppThemes" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="background">@color/light_gray</item>
        <item name="colorPrimary">@color/secondary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
        <!-- Other style attributes -->
    </style>

</resources>