<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground_gray"
    android:gravity="center"
    tools:context="qupos.UI.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/landing_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBaseline_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBaseline_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="500sp"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/thirty"
                    android:paddingRight="@dimen/thirty"
                    android:src="@drawable/app_logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/primary_color"
                    android:text="Prepaid"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:layout_marginTop="@dimen/hundred"
                    android:gravity="center"
                    android:text="Prepaid"
                    android:textColor="@color/primary_color"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="40sp"
                        android:layout_height="4dp"
                        android:layout_margin="5sp"
                        android:background="@drawable/round_conners_background"
                        android:backgroundTint="@color/gold_yellow"
                        android:padding="16sp" />

                    <View
                        android:layout_width="40sp"
                        android:layout_height="4dp"
                        android:layout_margin="5sp"
                        android:background="@drawable/round_conners_background"
                        android:backgroundTint="@color/gold_yellow"
                        android:padding="16sp" />

                    <View
                        android:layout_width="40sp"
                        android:layout_height="6dp"
                        android:layout_margin="5sp"
                        android:background="@drawable/round_conners_background"
                        android:backgroundTint="@color/gold_yellow"
                        android:padding="16sp" />
                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25sp"
                android:gravity="bottom"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/candidate_btn"
                    style="@style/CustomButtonStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="@dimen/fifteen"
                    android:background="@drawable/text_box_background"
                    android:backgroundTint="@color/gold_yellow"
                    android:text="Continue"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>