<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="10sp"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:padding="10sp">

    <!-- For each key-value pair, a LinearLayout with horizontal orientation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <!-- Label TextView -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Entry Date"
            android:textColor="@color/primary_color"
            android:textStyle="bold" />

        <!-- Value TextView -->
        <TextView
            android:id="@+id/entryDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <!-- Label TextView -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reference ID"
            android:textColor="@color/primary_color"
            android:textStyle="bold" />

        <!-- Value TextView -->
        <TextView
            android:id="@+id/referenceId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Network"
            android:textColor="@color/primary_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/network"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Transaction Type"
            android:textColor="@color/primary_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/transactionType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deposit Funds"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Repeat the same structure for all other key-value pairs -->
    <LinearLayout
        android:id="@+id/amount_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amount"
            android:textColor="@color/primary_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2000"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/balance_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Available Balance"
            android:textColor="@color/primary_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cumulativeBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2000"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/balance_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total"
            android:textColor="@color/primary_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cumulativeTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Continue for other fields like providerSerial, providerReference, etc. -->
<View
    android:layout_width="match_parent"
    android:background="@color/light_gray"
    android:layout_height="1sp"
    android:backgroundTint="@color/light_gray"/>
</LinearLayout>
