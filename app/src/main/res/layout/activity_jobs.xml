<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground_gray"
    tools:context="com.example.testingmyskills.UI.Dashboard"
    tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage,UselessParent">
    <!--    Landing page-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/landing_page1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBaseline_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBaseline_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/twenty"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:id="@+id/salute_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/sixteen"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/eight"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:id="@+id/user_salutation1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/salutation"
                            android:textColor="@color/light_gray" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical"
                        tools:ignore="RtlHardcoded">

                        <FrameLayout
                            android:id="@+id/profile_picture_container1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/round_conners_background"
                            android:padding="@dimen/eight"
                            tools:ignore="RtlHardcoded">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="TODO"
                                android:src="@drawable/logout" />

                        </FrameLayout>


                    </LinearLayout>
                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/thirty"
                    android:layout_marginBottom="@dimen/fifty"
                    app:layout_constraintTop_toBottomOf="@id/salute_layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/CategoryRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:scrollbars="vertical" />

                    </LinearLayout>


                </ScrollView>


            </LinearLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    dash_board_screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dash_board_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBaseline_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBaseline_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/twenty"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/eight"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:id="@+id/user_salutation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/salutation"
                            android:textColor="@color/light_gray" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical"
                        tools:ignore="RtlHardcoded">

                        <FrameLayout
                            android:id="@+id/profile_picture_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/round_conners_background"
                            android:padding="@dimen/eight"
                            tools:ignore="RtlHardcoded">

                            <ImageView
                                android:id="@+id/user_profile_picture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="TODO"
                                android:src="@drawable/logout" />

                        </FrameLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/five"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/EconetBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="4.5"
                        android:background="@drawable/white_box_with_shadow"
                        android:orientation="vertical"
                        android:padding="@dimen/fifteen"
                        tools:ignore="NestedWeights,RtlHardcoded">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingStart="@dimen/six"
                            android:text="@string/econet"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/sixteen"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.2" />

                    <LinearLayout
                        android:id="@+id/TelnetBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="4.5"
                        android:background="@drawable/white_box_with_shadow"
                        android:orientation="vertical"
                        android:padding="@dimen/fifteen"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingStart="@dimen/six"
                            android:text="@string/telnet"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/sixteen"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.2" />

                    <LinearLayout
                        android:id="@+id/NetoneBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="4.5"
                        android:background="@drawable/white_box_with_shadow"
                        android:orientation="vertical"
                        android:padding="@dimen/fifteen">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingStart="@dimen/six"
                            android:text="@string/netone"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/sixteen"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:gravity="start"
                    android:text="@string/balances"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/banner_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-1sp"
                        android:background="@drawable/top_left_conner_cut"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/fifteen"
                        android:paddingTop="@dimen/three"
                        android:paddingEnd="@dimen/thirty"
                        android:paddingBottom="@dimen/three">

                        <ImageView
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/five"
                            android:background="@drawable/round_conners_background"
                            android:backgroundTint="@color/primary_color"
                            android:contentDescription="TODO"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/selected_network"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eight"
                            android:gravity="center"
                            android:text="@string/balances"
                            android:textColor="@color/white"
                            android:textSize="@dimen/twelve"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/banner_background"
                        android:baselineAligned="false"
                        android:gravity="center"
                        android:paddingStart="15sp"
                        android:paddingEnd="15sp"
                        android:paddingBottom="15sp"
                        android:src="@drawable/logo">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="11"
                            android:gravity="start"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/balance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/message"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80sp"
                                android:layout_height="80sp"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/five"
                                android:layout_marginBottom="@dimen/five"
                                android:contentDescription="TODO"
                                android:gravity="center"
                                android:src="@drawable/illustration" />

                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="4.5"
                        android:background="@drawable/white_box_with_shadow"
                        android:orientation="vertical"
                        android:padding="@dimen/fifteen"
                        tools:ignore="NestedWeights">


                        <Spinner
                            android:id="@+id/item_type_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sixteen" />
                    </LinearLayout>

<!--                    <View-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="0dp"-->
<!--                        android:layout_weight="0.5" />-->

                    <LinearLayout
                        android:id="@+id/specials"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="4.5"
                        android:visibility="gone"
                        android:background="@drawable/rounded_conners_with_gradient"
                        android:orientation="vertical"
                        android:padding="@dimen/fifteen">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/round_conners_background"
                                android:backgroundTint="@color/primary_color"
                                android:gravity="center"
                                android:padding="@dimen/eight"
                                android:text="@string/full_stop"
                                android:textColor="@color/white"
                                android:textSize="@dimen/one"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/currency_type_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sixteen" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/five"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:orientation="horizontal">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/SelectedCategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/recommended_items"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/show_more_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"
                        android:textColor="@color/primary_color"
                        android:textSize="15sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="300sp"
                    android:layout_marginBottom="@dimen/fifty">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:scrollbars="vertical"
                            app:layout_constraintTop_toBottomOf="@id/sign_up_page" />
                    </LinearLayout>


                </ScrollView>


            </LinearLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    Job_list_screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Job_list_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBaseline_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBaseline_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_conners_background"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="50sp"
                    android:paddingBottom="50sp"
                    android:weightSum="4">

                    <ImageButton
                        android:id="@+id/back_btn_from_job_list"
                        android:layout_width="30sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/baseline_keyboard_arrow_left_24"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/popular_items"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/filter_button"
                        android:layout_width="30sp"
                        android:layout_height="22dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/filter_icon"
                        app:tint="@color/white" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/filter_section"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20sp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/thirty"
                    android:paddingRight="25sp">

                    <TextView
                        android:id="@+id/number_of_posts"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:layout_weight="3"
                        android:text="@string/_120_items_found"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />

                    <Spinner
                        android:id="@+id/filter_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/eight"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <ScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="400sp"
                    android:layout_marginBottom="5sp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/jobListRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:padding="25sp"
                        android:scrollbars="vertical"
                        app:layout_constraintTop_toBottomOf="@id/sign_up_page" />
                </ScrollView>


            </LinearLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    buy_screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buy_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBaseline_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBaseline_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_conners_background"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="50sp"
                    android:paddingBottom="50sp"
                    android:weightSum="4">


                    <TextView
                        android:id="@+id/buy_tittle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/item_to_buy"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="450sp"
                    android:layout_marginBottom="5sp"
                    android:padding="@dimen/sixteen">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten"
                            android:background="@drawable/rounded_with_white_background"
                            android:hint="@string/mobile_number"
                            android:inputType="phone"
                            android:padding="@dimen/twelve"
                            android:textColor="@color/primary_color" />

                        <Spinner
                            android:id="@+id/item_type_spinner1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten"
                            android:background="@drawable/rounded_with_white_background"
                            android:hint="@string/data"
                            android:padding="@dimen/twelve"
                            android:textColor="@color/primary_color"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/item_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten"
                            android:autofillHints="none"
                            android:background="@drawable/rounded_with_white_background"
                            android:hint="@string/data"
                            android:padding="@dimen/twelve"
                            android:textColor="@color/primary_color"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/item_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten"
                            android:autofillHints="none"
                            android:background="@drawable/rounded_with_white_background"
                            android:hint="@string/_100gb"
                            android:padding="@dimen/twelve"
                            android:textColor="@color/primary_color" />

                        <EditText
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten"
                            android:autofillHints="none"
                            android:background="@drawable/rounded_with_white_background"
                            android:hint="@string/price"
                            android:inputType="number"
                            android:padding="@dimen/twelve"
                            android:textColor="@color/primary_color" />

                        <Button
                            android:id="@+id/buy"
                            style="@style/CustomButtonStyle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/buy"
                            android:textStyle="bold" />

                    </LinearLayout>

                </ScrollView>


            </LinearLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    confirmation_screen-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirmation_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_ground_gray"
        android:padding="@dimen/twenty_five"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/are_you_sure_you_wanna_logout"
