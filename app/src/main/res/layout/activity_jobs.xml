<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="com.example.testingmyskills.Dashboard">
    <!--    dash_board_screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dash_board_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical"
        app:layout_constraintBaseline_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBaseline_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/twenty">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/eight">

                        <TextView
                            android:id="@+id/user_salutation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/salutation"
                            android:textColor="@color/light_gray" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/profile_picture_container"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:background="@drawable/round_conners_background">


                            <TextView
                                android:id="@+id/notifications"
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:layout_marginLeft="30sp"
                                android:layout_marginTop="1sp"
                                android:layout_marginRight="2sp"
                                android:background="@drawable/round_conners_background"
                                android:backgroundTint="@color/secondary_color"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/ten"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/user_profile_picture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/envelop" />

                        </FrameLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/five"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/EconetBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="4.5"
                        android:background="@drawable/white_box_with_shadow"
                        android:orientation="vertical"
                        android:padding="@dimen/fifteen">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingStart="@dimen/six"
                            android:text="Econet"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/sixteen"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.2" />

                    <LinearLayout
                        android:id="@+id/TelnetBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="4.5"
                        android:background="@drawable/white_box_with_shadow"
                        android:orientation="vertical"
                        android:padding="@dimen/fifteen">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingStart="@dimen/six"
                            android:text="Telnet"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/sixteen"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.2" />

                    <LinearLayout
                        android:id="@+id/NetoneBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="4.5"
                        android:background="@drawable/white_box_with_shadow"
                        android:orientation="vertical"
                        android:padding="@dimen/fifteen">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingStart="@dimen/six"
                            android:text="Netone"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/sixteen"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:gravity="start"
                    android:text="Balances"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/banner_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-1sp"
                        android:background="@drawable/top_left_conner_cut"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/fifteen"
                        android:paddingTop="@dimen/three"
                        android:paddingEnd="@dimen/thirty"
                        android:paddingBottom="@dimen/three">

                        <ImageView
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/five"
                            android:background="@drawable/round_conners_background"
                            android:backgroundTint="@color/primary_color"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/selected_network"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eight"
                            android:gravity="center"
                            android:text="Balances"
                            android:textColor="@color/white"
                            android:textSize="@dimen/twelve"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/banner_background"
                        android:gravity="center"
                        android:paddingStart="15sp"
                        android:paddingEnd="15sp"
                        android:paddingBottom="15sp"
                        android:src="@drawable/logo">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="11"
                            android:gravity="start"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/balance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/message"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80sp"
                                android:layout_height="80sp"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/five"
                                android:background="@drawable/round_conners_background"
                                android:backgroundTint="@color/secondary_color"
                                android:gravity="center" />

                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/five"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="4.5"
                        android:background="@drawable/white_box_with_shadow"
                        android:orientation="vertical"
                        android:padding="@dimen/fifteen">


                        <Spinner
                            android:id="@+id/item_type_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="R 0.00 left"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sixteen" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.5" />

                    <LinearLayout
                        android:id="@+id/specials"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="4.5"
                        android:background="@drawable/rounded_conners_with_gradient"
                        android:orientation="vertical"
                        android:padding="@dimen/fifteen">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/round_conners_background"
                                android:backgroundTint="@color/primary_color"
                                android:gravity="center"
                                android:padding="@dimen/eight"
                                android:text="."
                                android:textColor="@color/white"
                                android:textSize="@dimen/one"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:paddingStart="@dimen/six"
                                android:text="Specials"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sixteen"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/five"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:orientation="horizontal">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Recommended Items"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/show_more_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More"
                        android:textColor="@color/primary_color"
                        android:textSize="15sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="240sp"
                    android:layout_marginBottom="5sp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        app:layout_constraintTop_toBottomOf="@id/sign_up_page" />
                </ScrollView>


            </LinearLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    Job_list_screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Job_list_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBaseline_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBaseline_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_conners_background"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="50sp"
                    android:paddingBottom="50sp"
                    android:weightSum="4">

                    <ImageButton
                        android:id="@+id/back_btn_from_job_list"
                        android:layout_width="30sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/baseline_keyboard_arrow_left_24"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Popular Items"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/filter_button"
                        android:layout_width="30sp"
                        android:layout_height="22dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/filter_icon"
                        app:tint="@color/white" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/filter_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/thirty"
                    android:paddingRight="25sp">

                    <TextView
                        android:id="@+id/number_of_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:layout_weight="3"
                        android:text="120 items found"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/filter_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:textColor="@color/black"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <ScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="400sp"
                    android:layout_marginBottom="5sp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/jobListRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:padding="25sp"
                        android:scrollbars="vertical"
                        app:layout_constraintTop_toBottomOf="@id/sign_up_page" />
                </ScrollView>


            </LinearLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    buy_screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buy_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBaseline_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBaseline_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_conners_background"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="50sp"
                    android:paddingBottom="50sp"
                    android:weightSum="4">


                    <TextView
                        android:id="@+id/buy_tittle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Item to buy"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="450sp"
                    android:layout_marginBottom="5sp"
                    android:padding="@dimen/sixteen">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten"
                            android:background="@drawable/rounded_with_white_background"
                            android:hint="Mobile number"
                            android:inputType="phone"
                            android:padding="@dimen/twelve"
                            android:textColor="@color/primary_color" />

                        <EditText
                            android:id="@+id/item_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten"
                            android:background="@drawable/rounded_with_white_background"
                            android:hint="Data "
                            android:padding="@dimen/twelve"
                            android:textColor="@color/primary_color" />

                        <EditText
                            android:id="@+id/item_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten"
                            android:background="@drawable/rounded_with_white_background"
                            android:hint="100GB"

                            android:padding="@dimen/twelve"
                            android:textColor="@color/primary_color" />

                        <EditText
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten"
                            android:background="@drawable/rounded_with_white_background"
                            android:hint="Price"
                            android:inputType="number"
                            android:padding="@dimen/twelve"
                            android:textColor="@color/primary_color" />

<!--                        <EditText-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginBottom="@dimen/ten"-->
<!--                            android:background="@drawable/rounded_with_white_background"-->
<!--                            android:hint="Reserved"-->
<!--                            android:padding="@dimen/twelve"-->
<!--                            android:textColor="@color/primary_color" />-->

                        <Button
                            android:id="@+id/buy"
                            style="@style/CustomButtonStyle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_box_background"
                            android:backgroundTint="@color/secondary_color"
                            android:text="Buy"
                            android:textStyle="bold" />

                    </LinearLayout>

                </ScrollView>


            </LinearLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Don't remove-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/rounded_with_white_background"
            android:orientation="horizontal"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/nav_dash_board_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/hom_icon"
                    app:tint="@color/primary_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/nav_notifications_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/shop"
                    app:tint="@color/primary_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/nav_profile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/profile_icon"
                    app:tint="@color/primary_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/more"
                    app:tint="@color/primary_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>