<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_app_background"
    tools:context=".JobsActivity">
    <!--    dash_board_screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dash_board_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBaseline_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBaseline_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15sp"
                    android:layout_weight="3"
                    android:padding="10sp"
                    android:src="@drawable/logo">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_salutation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hello, Philasande"
                            android:textColor="@color/light_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8sp"
                            android:text="Dashboard"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/profile_picture_container"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/job_icon_background">

                            <ImageView
                                android:id="@+id/user_profile_picture"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/image" />

                        </FrameLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_weight="4"
                    android:background="@drawable/banner_background"
                    android:gravity="center"
                    android:src="@drawable/logo">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:padding="5sp"
                            android:progress="90"
                            android:progressDrawable="@drawable/circular_progress_bar" />

                        <TextView
                            android:id="@+id/progressLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="10%"
                            android:textColor="@color/primary_color"
                            android:textSize="14sp" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/comple_profile_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:text="Complete your \n profile"
                        android:textColor="@color/primary_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <ImageButton
                        android:id="@+id/complete_profile_btn"
                        android:layout_width="30sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:background="@drawable/todo_list_icon"
                        android:src="@drawable/forward_arrow" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15sp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:background="@drawable/rounded16_conners"
                        android:backgroundTint="@color/sky_blue2"
                        android:orientation="vertical"
                        android:padding="18sp">

                        <TextView
                            android:id="@+id/number_of_applications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="36"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Jobs Applied"
                            android:textColor="#b2d7f3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1.5" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:background="@drawable/rounded16_conners"
                        android:backgroundTint="@color/dull_pink"
                        android:orientation="vertical"
                        android:padding="18sp">

                        <TextView
                            android:id="@+id/number_of_interviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingEnd="4sp"
                            android:text="Interviews "
                            android:textColor="#fdb5cf"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:layout_weight="2"
                        android:text="Recomended for you"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/show_more_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:text="More"
                        android:textColor="@color/primary_color"
                        android:textSize="15sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="240sp"
                    android:layout_marginBottom="5sp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        app:layout_constraintTop_toBottomOf="@id/sign_up_page" />
                </ScrollView>


            </LinearLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    Job_list_screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Job_list_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBaseline_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBaseline_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_conners_background"
                    android:backgroundTint="#7939cb"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="50sp"
                    android:paddingBottom="50sp"
                    android:weightSum="4">

                    <ImageButton
                        android:id="@+id/back_btn_from_job_list"
                        android:layout_width="30sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:background="@drawable/todo_list_icon"
                        android:src="@drawable/baseline_keyboard_arrow_left_24"
                        app:tint="@color/light_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Search Jobs"
                        android:textColor="@color/light_gray"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="30sp"
                        android:layout_height="22dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:background="@drawable/todo_list_icon"
                        android:src="@drawable/filter_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="-30sp"
                    android:layout_marginRight="25sp"
                    android:layout_weight="3"
                    android:background="@drawable/white_box_with_shadow"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <EditText
                        android:id="@+id/text_to_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:hint="Search here..."
                        android:padding="12sp"
                        android:textColor="@color/primary_color"
                        android:textColorHint="@color/light_gray" />

                    <ImageButton
                        android:id="@+id/search_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/search_icon" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_weight="3"
                    android:padding="25sp"
                    android:orientation="horizontal"
               >

                    <TextView
                        android:id="@+id/number_of_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:layout_weight="3"
                        android:text="120 Jobs found"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/filter_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:textColor="@color/black"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        />


                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="400sp"
                    android:layout_marginBottom="5sp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/jobListRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="25sp"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        app:layout_constraintTop_toBottomOf="@id/sign_up_page" />
                </ScrollView>


            </LinearLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Don't remove-->
    <LinearLayout
        android:id="@+id/base_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:layout_weight="4"
            android:background="@drawable/rounded_with_white_background"
            android:orientation="horizontal"
            android:padding="30sp">

            <ImageButton
                android:id="@+id/nav_dash_board_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/home" />

            <ImageButton
                android:id="@+id/nav_applications_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/applications" />

            <ImageButton
                android:id="@+id/nav_notifications_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/notifications" />

            <ImageButton
                android:id="@+id/nav_profile_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/profile" />
        </LinearLayout>

        <View
            android:layout_width="200sp"
            android:layout_height="10sp"
            android:background="@color/light_gray" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>