<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground_gray"
    tools:context="com.example.testingmyskills.UI.Dashboard"
    tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage,UselessParent">
    <!--    app_frame -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBaseline_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/sixteen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--   Balance Display Layout  Never Hides   -->
                <LinearLayout
                    android:id="@+id/balance_display_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/twenty"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:orientation="vertical"
                            tools:ignore="RtlHardcoded">

                            <FrameLayout
                                android:id="@+id/back_to_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:background="@drawable/round_conners_background"
                                android:padding="@dimen/eight"
                                tools:ignore="RtlHardcoded">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/todo"
                                    android:src="@drawable/arrow_back" />

                            </FrameLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/eight"
                            tools:ignore="RtlHardcoded">


                            <TextView
                                android:id="@+id/salutation_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/salutation"
                                android:textColor="@color/light_gray" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical"
                            tools:ignore="RtlHardcoded">

                            <FrameLayout
                                android:id="@+id/logout_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/round_conners_background"
                                android:padding="@dimen/eight"
                                tools:ignore="RtlHardcoded">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/todo"
                                    android:src="@drawable/logout" />

                            </FrameLayout>


                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/balances_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:gravity="start"
                        android:text="@string/balances"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/banner_background"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-1sp"
                            android:background="@drawable/top_left_conner_cut"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/fifteen"
                            android:paddingTop="@dimen/three"
                            android:paddingEnd="@dimen/thirty"
                            android:paddingBottom="@dimen/three">

                            <ImageView
                                android:layout_width="15sp"
                                android:layout_height="15sp"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/five"
                                android:background="@drawable/round_conners_background"
                                android:backgroundTint="@color/primary_color"
                                android:contentDescription="@string/todo"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/selected_network_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/eight"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/twelve"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/banner_background"
                            android:baselineAligned="false"
                            android:gravity="center"
                            android:paddingStart="15sp"
                            android:paddingEnd="15sp"
                            android:paddingBottom="15sp"
                            android:src="@drawable/logo">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="11"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/sixteen">

                                <TextView
                                    android:id="@+id/available_balance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/status_message"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="Still in a good state"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />
                            </LinearLayout>


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="80sp"
                                    android:layout_height="80sp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/five"
                                    android:layout_marginBottom="@dimen/five"
                                    android:contentDescription="TODO"
                                    android:gravity="center"
                                    android:src="@drawable/illustration" />

                            </RelativeLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--   ISP_display_layout this shows the ISPs -->
                <LinearLayout
                    android:id="@+id/ISP_display_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/ten"
                        android:layout_marginBottom="@dimen/fifty">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingLeft="15sp"
                                    android:paddingRight="15sp">

                                    <LinearLayout
                                        android:id="@+id/econetISP"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:background="@drawable/rounded_with_white_background"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="10sp">

                                        <ImageView
                                            android:layout_width="100sp"
                                            android:layout_height="80sp"
                                            android:src="@drawable/econet_png" />



                                    </LinearLayout>

                                    <View
                                        android:layout_width="5sp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="2sp" />


                                    <LinearLayout
                                        android:id="@+id/telecelISP"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:background="@drawable/rounded_with_white_background"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="10sp">

                                        <ImageView
                                            android:layout_width="100sp"
                                            android:layout_height="80sp"
                                            android:src="@drawable/telecet_png" />

                                        <!--                                        <TextView-->
                                        <!--                                            android:layout_width="wrap_content"-->
                                        <!--                                            android:layout_height="wrap_content"-->
                                        <!--                                            android:gravity="center"-->
                                        <!--                                            android:text="Telecel"-->
                                        <!--                                            android:textColor="@color/primary_color"-->
                                        <!--                                            android:textSize="18sp" />-->
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="7sp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="9sp"
                                    android:orientation="horizontal"
                                    android:paddingLeft="15sp"
                                    android:paddingRight="15sp">

                                    <LinearLayout
                                        android:id="@+id/netoneISP"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:background="@drawable/rounded_with_white_background"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="10sp">

                                        <ImageView
                                            android:layout_width="100sp"
                                            android:layout_height="80sp"
                                            android:src="@drawable/netone_icon" />

                                        <!--                                        <TextView-->
                                        <!--                                            android:layout_width="wrap_content"-->
                                        <!--                                            android:layout_height="wrap_content"-->
                                        <!--                                            android:gravity="center"-->
                                        <!--                                            android:text="@string/netone"-->
                                        <!--                                            android:textColor="@color/primary_color"-->
                                        <!--                                            android:textSize="18sp" />-->


                                    </LinearLayout>

                                    <View
                                        android:layout_width="5sp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="2sp" />


                                    <LinearLayout
                                        android:id="@+id/zesaISP"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:background="@drawable/rounded_with_white_background"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="10sp">

                                        <ImageView
                                            android:layout_width="100sp"
                                            android:layout_height="80sp"
                                            android:src="@drawable/electricity_png" />

                                        <!--                                        <TextView-->
                                        <!--                                            android:layout_width="wrap_content"-->
                                        <!--                                            android:layout_height="wrap_content"-->
                                        <!--                                            android:gravity="center"-->
                                        <!--                                            android:text="Electricity"-->
                                        <!--                                            android:textColor="@color/primary_color"-->
                                        <!--                                            android:textSize="18sp" />-->


                                    </LinearLayout>


                                </LinearLayout>
                                <!--                            <androidx.recyclerview.widget.RecyclerView-->
                                <!--                                android:id="@+id/isp_list_recycler_view"-->
                                <!--                                android:layout_width="match_parent"-->
                                <!--                                android:layout_height="match_parent"-->
                                <!--                                android:clipToPadding="false"-->
                                <!--                                android:scrollbars="vertical" />-->

                            </LinearLayout>
                        </LinearLayout>



                    </ScrollView>
                </LinearLayout>
                <!--   Items_display_layout this shows List of Items after ASP Selection -->
                <LinearLayout
                    android:id="@+id/Items_display_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_box_with_shadow"
                        android:orientation="vertical"
                        android:padding="@dimen/fifteen"
                        tools:ignore="NestedWeights">

                        <Spinner
                            android:id="@+id/items_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sixteen" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/SelectedItem"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingStart="@dimen/sixteen"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/More_Items"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more"
                            android:textColor="@color/primary_color"
                            android:textSize="15sp"
                            android:textStyle="normal" />


                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/fifty">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/Items_recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:scrollbars="vertical"
                                app:layout_constraintTop_toBottomOf="@id/sign_up_page" />
                        </LinearLayout>


                    </ScrollView>
                </LinearLayout>
                <!--   Buying_layout this is where you will be capturing the values of an item you are buying -->
                <LinearLayout
                    android:id="@+id/Buying_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/sixteen"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten"
                            android:background="@drawable/rounded_conners_with_gradient"
                            android:orientation="vertical"
                            tools:ignore="NestedWeights">

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                xmlns:tools="http://schemas.android.com/tools"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:background="@drawable/rounded_with_white_background"
                                android:padding="10sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:orientation="horizontal">



                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_weight="2"
                                        android:gravity="left"
                                        android:orientation="vertical"
                                        android:paddingStart="20sp">

                                        <TextView
                                            android:id="@+id/item_type1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/primary_color"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/item_life_time1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/light_gray" />

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_weight="2"
                                        android:gravity="right"
                                        android:orientation="vertical"
                                        android:paddingStart="20sp">
                                        <TextView
                                            android:id="@+id/item_price1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="2"
                                            android:padding="5sp"
                                            android:textColor="@color/black"
                                            android:textSize="15sp" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/item_to_buy_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:visibility="gone"
                                android:textColor="@color/white" />
                            <Spinner
                                android:id="@+id/item_to_buy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/data"
                                android:textColor="@color/primary_color"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/five"
                            android:background="@drawable/edit_text_background"
                            android:orientation="horizontal"
                            android:paddingStart="10sp">

                            <ImageView
                                android:id="@+id/country_flag"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/za" />

                            <Spinner
                                android:id="@+id/country_code"
                                android:layout_width="120sp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="8dp"
                                android:hint="+27"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/mobile_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/five"
                                android:autofillHints="none"
                                android:background="@null"
                                android:hint="@string/mobile_number"
                                android:inputType="number"
                                android:textColor="@color/primary_color"
                                android:textColorHint="@color/light_gray" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/Itme_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten"
                            android:autofillHints="none"
                            android:background="@drawable/rounded_with_white_background"
                            android:hint="@string/price"
                            android:inputType="number"
                            android:padding="@dimen/twelve"
                            android:textColor="@color/primary_color"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btn_buy"
                            style="@style/CustomButtonStyle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/buy"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    More Items -->
    <LinearLayout
        android:id="@+id/Job_list_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_ground_gray"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBaseline_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBaseline_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_conners_background"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="50sp"
                    android:paddingBottom="50sp"
                    android:weightSum="4">

                    <ImageButton
                        android:id="@+id/back_btn_from_job_list"
                        android:layout_width="30sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/baseline_keyboard_arrow_left_24"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/popular_items"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/filter_button"
                        android:layout_width="30sp"
                        android:layout_height="22dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/filter_icon"
                        app:tint="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/filter_section"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20sp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/thirty"
                    android:paddingRight="25sp">

                    <TextView
                        android:id="@+id/number_of_posts"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:layout_weight="3"
                        android:text="@string/_120_items_found"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />

                    <Spinner
                        android:id="@+id/filter_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/eight"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <ScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="450sp"
                    android:layout_marginTop="@dimen/sixteen"
                    android:layout_marginBottom="5sp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/MoreItemsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:padding="25sp"
                        android:scrollbars="vertical"
                        app:layout_constraintTop_toBottomOf="@id/sign_up_page" />
                </ScrollView>


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
    <!--    confirmation_screen-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirmation_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_ground_gray"
        android:padding="@dimen/twenty_five"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/are_you_sure_you_wanna_logout"
